---
import { BEASCOUT_URL, IDS, HERO_IMAGE } from "../data/site";

// Load hero content from Markdown
const [heroMod] = await Astro.glob("../data/hero.md");
const fm = (heroMod?.frontmatter ?? {}) as {
  title?: string;
  subtitle?: string;
  supertitle?: string;
  buttons?: { visit?: string; apply?: string; contact?: string };
};
---

<div class="hero min-h-[80vh]" style={`background-image: url('${HERO_IMAGE}');`}>
  <div class="hero-overlay bg-neutral/50"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-3xl">
      {fm.supertitle && (
        <p class="mb-4 text-2xl sm:text-3xl font-bold">
          {fm.supertitle}
        </p>
      )}
      <h1 class="mb-4 text-4xl sm:text-5xl font-extrabold leading-tight">
        {fm.title ?? "Welcome to Cub Scout Pack 151"}
      </h1>
      {fm.subtitle && (
        <p class="mb-6 text-lg sm:text-xl">
          {fm.subtitle}
        </p>
      )}
      <div class="flex flex-wrap items-center justify-center gap-3">
        <a href={"#" + IDS.program} class="btn btn-primary">
          {fm.buttons?.visit ?? "Visit Us"}
        </a>
        <a href={BEASCOUT_URL} class="btn btn-secondary">
          {fm.buttons?.apply ?? "Apply Online"}
        </a>
        <a href={"#" + IDS.contact} class="btn">
          {fm.buttons?.contact ?? "Contact"}
        </a>
      </div>
    </div>
  </div>
</div>