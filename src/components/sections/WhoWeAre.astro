---
import { IDS, GALLERY_1, GALLERY_2 } from "../../data/site";

// Load "Who We Are" content from Markdown
const [{ Content, frontmatter: fm }] = await Astro.glob("../../data/who-we-are.md");
---

<section id={IDS.whoWeAre} class="py-16 bg-base-200">
  <div class="container mx-auto px-4 max-w-5xl">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-center">{fm?.title ?? "Who We Are"}</h2>
      <div class="prose max-w-none mt-4 whitespace-pre-line">
        <Content />
      </div>
    </div>
    <div class="mt-8 grid gap-4 sm:grid-cols-2">
      <figure class="card bg-base-100 shadow">
        <img src={GALLERY_1} alt={fm?.gallery?.[0]?.alt ?? "Cub Scouts hiking together on a local trail"} class="rounded-t-xl object-cover w-full h-56" loading="lazy" />
      </figure>
      <figure class="card bg-base-100 shadow">
        <img src={GALLERY_2} alt={fm?.gallery?.[1]?.alt ?? "Families around a campfire during a Pack outing"} class="rounded-t-xl object-cover w-full h-56" loading="lazy" />
      </figure>
    </div>
  </div>
</section>