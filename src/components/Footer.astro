---
import { SITE_TITLE } from "../data/site";
const year = new Date().getFullYear();

// Load footer content from Markdown
const [mod] = await Astro.glob("../data/footer.md");
const fm = (mod?.frontmatter ?? {}) as {
  location?: string;
  backToTop?: string;
};
---

<footer class="footer footer-center bg-base-200 text-base-content p-8 mt-16">
  <aside class="space-y-1">
    <p class="font-semibold text-lg">{SITE_TITLE}</p>
    {fm.location && <p>{fm.location}</p>}
    <p>Â© {year} Pack 151. All rights reserved.</p>
  </aside>
  <nav>
    <a href="#" class="link link-hover" aria-label={fm.backToTop ?? "Back to top"}>{fm.backToTop ?? "Back to top"}</a>
  </nav>
</footer>