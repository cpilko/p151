---
import "../styles/global.css";
import { SITE_TITLE as FALLBACK_TITLE, SITE_DESC as FALLBACK_DESC } from "../data/site";

// Load site meta from Markdown
const [siteMod] = await Astro.glob("../data/site.md");
const site = (siteMod?.frontmatter ?? {}) as {
  title?: string;
  description?: string;
  themeColor?: string;
};
---

<!doctype html>
<html lang="en" data-theme="p151-bumblebee">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{site.title ?? FALLBACK_TITLE}</title>
    <meta name="description" content={site.description ?? FALLBACK_DESC} />
    <meta name="theme-color" content={site.themeColor ?? "#e0a82e"} />

    <!-- Open Graph -->
    <meta property="og:title" content={site.title ?? FALLBACK_TITLE} />
    <meta property="og:description" content={site.description ?? FALLBACK_DESC} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={site.title ?? FALLBACK_TITLE} />
    <meta name="twitter:description" content={site.description ?? FALLBACK_DESC} />

    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        name: site.title ?? FALLBACK_TITLE,
        description: site.description ?? FALLBACK_DESC,
        address: {
          "@type": "PostalAddress",
          addressLocality: "Broomall",
          addressRegion: "PA",
          addressCountry: "US",
        },
      })}
    </script>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 btn btn-sm btn-primary">Skip to content</a>
    <slot />
  </body>
</html>
